{
    "inbounds": [
        {
            "type": "hysteria2",
            "tag": "sing-box hysteria2",
            "listen": "::",
            "listen_port": ${PORT_HYSTERIA2},
            "users": [
                {
                    "password": "${SB_UUID}"
                }
            ],
            "ignore_client_bandwidth": false,
            "tls": {
                "enabled": true,
                "server_name": "",
                "alpn": [
                    "h3"
                ],
                "min_version": "1.3",
                "max_version": "1.3",
                "certificate_path": "${SSL_PATH}/${DOMAIN}.crt",
                "key_path": "${SSL_PATH}/${DOMAIN}.key"
            }
        }
    ]
}
